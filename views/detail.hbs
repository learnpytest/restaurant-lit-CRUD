<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  {{!-- CRUD選項 --}}
  <div class="row mb-4">
    <div class="col-1 mr-1"><a href="/"
         class="badge badge-pill badge-info"
         style="font-size: 16px;"><i class="fas fa-arrow-left mr-2"></i>Back</a></div>
    <div class="col-1 mr-1">
      <a href="/restaurants/{{restaurant._id}}/edit"
         class="badge badge-pill badge-secondary font-weight-bolder"
         style="font-size: 16px;"><i class="fas fa-edit mr-2"></i>edit</a>
    </div>
    <div class="col-1 mr-1">
      {{!-- 這裡是刪除資料的元件 --}}
      <form action="/restaurants/{{restaurant._id}}/delete"
            method="POST"
            style="display: inline;">
        <button id="badge-delete"
                type="button"
                class="btn badge badge-pill badge-danger border-0 font-weight-bolder"
                data-toggle="modal"
                data-target="#modal{{restaurant._id}}"
                style="font-size: 16px;"><i class="fas fa-trash-alt mr-1"></i>delete</button>
        <!-- Modal -->
        <div class="modal fade"
             id="modal{{restaurant._id}}"
             tabindex="-1"
             aria-labelledby="exampleModalLabel"
             aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-body justify-content-center text-center">
                <h5>確定要刪除 <span class="font-weight-bold">{{restaurant.name}}</span> 嗎?</h5>
              </div>
              <div class="modal-footer">
                {{> footer_button}}
              </div>

            </div>
          </div>
        </div>
      </form>
    </div>

  </div>
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-wine-glass-alt mr-3 fa-lg "></i>
          餐廳英文名稱：
        </span>
        {{restaurant.name_en}}
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils mr-2 fa-lg"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2 fa-lg"></i>
          地址：
        </span>
        {{restaurant.location}}

        <a href="{{restaurant.google_map}}"
           class="text-secondary"
           target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-lg"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2 fa-lg"></i>
          電話：
        </span>
        {{restaurant.phone}}

      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-star pr-1 fa-md"></i>
          評分：
        </span>
        {{restaurant.rating}}
      </p>
      <p class="mb-5">
        {{restaurant.description}}

      </p>

      <img class="rounded mx-auto d-block mb-4 w-100 show-restaurant-image"
           src="{{restaurant.image}}"
           alt="Restaurant Image"
           style="max-width: 600px;">
    </div>
  </div>
</div>
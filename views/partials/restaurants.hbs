{{!-- 從資料庫restaurants collection陣列運用迴圈產生restaurants --}}
{{#each partials.currentData}}
<div class="card mb-3">
  {{!-- 這裡是餐廳清單的元件 --}}
  <a href="/restaurants/{{this._id}}"
     class="text-secondary">
    <img class="card-img-top"
         src={{this.image}}
         alt={{this.name}}>
    <div class="card-body p-3">
      <h6 class="card-title mb-1">{{this.name}}</h6>
      <span class="restaurant-category mb-1">

        <i class="fas fa-utensils pr-2"></i> {{this.category}}

      </span>
      <span class="restaurant-rating badge badge-pill badge-danger font-weight-normal ml-2">
        {{this.rating}}
        <i class="fas fa-star fa-xs"></i>
      </span>
    </div>
  </a>
  {{!-- 這裡是餐廳清單的元件 --}}

  <div class="card-footer">
    {{!-- 這裡是瀏覽資料的元件 --}}
    <a href="/restaurants/{{this._id}}"
       class="badge badge-pill badge-info font-weight-bolder"><i class="fas fa-info-circle mr-1"></i>detail</a>
    {{!-- 這裡是瀏覽資料的元件 --}}

    {{!-- 這裡是編輯資料的元件 --}}
    <a href="/restaurants/{{this._id}}/edit"
       class="badge badge-pill badge-secondary font-weight-bolder"><i class="fas fa-edit mr-1"></i>edit</a>
    {{!-- 這裡是編輯資料的元件 --}}

    {{!-- 這裡是刪除資料的元件 --}}
    <form action="/restaurants/{{this._id}}/delete"
          method="POST"
          style="display: inline;">
      <button id="badge-delete"
              type="button"
              class="btn badge badge-pill badge-danger border-0"
              data-toggle="modal"
              data-target="#modal{{this._id}}"><i class="fas fa-trash-alt mr-1"></i>delete</button>
      <!-- Modal -->
      <div class="modal fade"
           id="modal{{this._id}}"
           tabindex="-1"
           aria-labelledby="exampleModalLabel"
           aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-body justify-content-center text-center">
              <h5>確定要刪除 <span class="font-weight-bold">{{this.name}}</span> 嗎?</h5>
            </div>
            <div class="modal-footer">
              {{> footer_button}}
            </div>

          </div>
        </div>
      </div>
    </form>
    {{!-- 這裡是刪除資料的元件 --}}
  </div>
</div>
{{/each}}
<div class="container my-3">
  <div class="row">
    <div class="col-10 col-lg-6 col-sm-8 mx-auto">
      <form id="form-edit"
            action="/restaurants/{{restaurant.id}}">
        <div class="form-group">
          <label for="name">餐廳中文名稱(必填)</label>
          <input type="text"
                 class="form-control"
                 id="name"
                 placeholder="請輸入餐廳的名稱 ..."
                 required>
          <div class="valid-feedback"></div>
          <div class="invalid-feedback"></div>
        </div>
        <div class="form-group">
          <label for="name_en">餐廳英文名稱</label>
          <input type="text"
                 class="form-control"
                 id="name_en"
                 placeholder="請輸入餐廳的英文名稱 ...">
          <div class="valid-feedback"></div>
          <div class="invalid-feedback"></div>
        </div>
        <div class="form-group">
          <label for="category">餐廳類別</label>
          <input list="category"
                 class="form-control"
                 min="2">
          <datalist id="category">
            <option>中東料裡</option>
            <option>日本料裡</option>
            <option>義式餐廳</option>
            <option>美式</option>
            <option>酒吧</option>
            <option>咖啡</option>
          </datalist>
        </div>
        <div class="form-group">
          <label for="image_link">圖片網址</label>
          <input type="text"
                 class="form-control"
                 id="image_link"
                 placeholder="請輸入圖片網址 ...">
          <div class="valid-feedback"></div>
          <div class="invalid-feedback"></div>
        </div>
        <div class="form-group">
          <label for="location">地址</label>
          <input type="text"
                 class="form-control"
                 id="location"
                 placeholder="請輸入餐廳地址 ...">
          <div class="valid-feedback"></div>
          <div class="invalid-feedback"></div>
        </div>
        <div class="form-group">
          <label for="phone">電話</label>
          <input type="text"
                 class="form-control"
                 id="phone"
                 placeholder="請輸入餐廳電話 ...">
          <div class="valid-feedback"></div>
          <div class="invalid-feedback"></div>
        </div>
        <div class="form-group">
          <label for="google_map">Google 地圖網址</label>
          <input type="text"
                 class="form-control"
                 id="phone"
                 placeholder="請輸入餐廳電話 ...">
          <div class="valid-feedback"></div>
          <div class="invalid-feedback"></div>
        </div>
        <div class="form-group">
          <label for="rating">評分</label>
          <input type="Number"
                 class="form-control"
                 id="rating"
                 placeholder="0 ~ 5 ..."
                 min="0"
                 max="5">
          <div class="valid-feedback"></div>
          <div class="invalid-feedback"></div>
        </div>
        <div class="form-group">
          <label for="description">關於</label>
          <input type="text"
                 class="form-control"
                 id="description"
                 placeholder="關於餐廳 ...">
          <div class="valid-feedback"></div>
          <div class="invalid-feedback"></div>
        </div>

        <button id="submit-btn"
                type="submit"
                class="btn btn-primary">送出</button>
      </form>
    </div>
  </div>
</div>